<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="paddle">

    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="paddle.blockm.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="paddle.blockm.BlacklistActivity"
            android:label="@string/app_name"
            android:parentActivityName="paddle.blockm.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="paddle.blockm.MainActivity" />
        </activity>

        <receiver
            android:name=".blockm.receivers.CallFilterReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="DATABASE"
            android:value="paddle.blockm" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="paddle.blockm" />
    </application>

</manifest>
