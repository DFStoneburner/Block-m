<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="128dp">

        <ImageView
            android:id="@+id/blockImage"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/image_description_missed_call"
            android:layout_alignParentRight="false"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/blockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/blockImage"
            android:layout_toEndOf="@+id/blockImage"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/blockDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blockTitle"
            android:layout_toEndOf="@+id/blockImage"
            android:layout_gravity="end"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignStart="@+id/blockTitle" />

        <Button
            android:id="@+id/blockActionCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/action_call"
            android:clickable="true"
            android:enabled="true"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/blockActionUnblock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/action_block"
            android:clickable="true"
            android:enabled="true"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/blockActionCall"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>